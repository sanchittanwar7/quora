<!DOCTYPE html>
<html>
<head>
	<title>Quora</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

	<!-- Compiled and minified JavaScript -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
	<!-- <li>  <%= link_to "Sign Out",destroy_user_session_path,method: :delete %></li> -->


	<div id="header">
		<div>
			<a href="/"><%= image_tag("quora.png", size: "130x50") %></a>
		</div>
		<div>
			<form class="search-container">
				<input type="text" id="search-bar" placeholder="What can I help you with today?">
				<a href="#"><img class="search-icon" src="http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png"></a>
			</form>
		</div>
		<div id="profile">
			
			<% if user_signed_in? %>
			<div id="dp">

			</div>
			<div class="dropdown">
				<a class='dropdown-button btn' href='#' data-activates='dropdown1'><%= current_user.first_name %></a>


				<ul id='dropdown1' class='dropdown-content'>
					<li><a href="user/profile"><i class="material-icons">account_circle</i>My Profile</a></li>
					<li><%= link_to "Sign Out",destroy_user_session_path,method: :delete %></li>
					
				</ul>


				<!-- <div id="myDropdown" class="dropdown-content">
					<a href="user/profile">My Profile</a>
					<%= link_to "Sign Out",destroy_user_session_path,method: :delete %>	
				</div> -->
			</div>
			<% else %>
			<div>
				<a href="users/sign_in" class="log">
					Log in or Sign up
				</a>
			</div>

			<% end %>
		</div>
	</div>

	

	<%= yield %>

</body>
</html>
